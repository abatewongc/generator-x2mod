            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "debug",
            "type": "shell",
            "command": "powershell.exe -file '${workspaceRoot}/scripts/run.ps1' -gamePath '<%= gamePath %>'",
            "problemMatcher": []
        },
        {
            "label": "publish",
            "type": "shell",
            "command": "powershell.exe -file '${workspaceRoot}/scripts/publish.ps1' -amlPath 'E:/Devspace/XCOM 2 Mods/alternative-mod-uploader/Binaries/Firaxis.SteamWorkshop.exe'",
            "problemMatcher": []
        },
        {
            "label": "runUnrealEditor",
            "type": "shell",
            "command": "powershell.exe -file '${workspaceRoot}/scripts/runUnrealEditor.ps1' -sdkPath '<%= sdkPath %>'",
            "problemMatcher": []
        }
    ]
}